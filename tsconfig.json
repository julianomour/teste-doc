{
  "compilerOptions": {
    "module": "CommonJS",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES7", "ESNext"],
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "src": ["*.ts", "./src/*"],
      "entities": ["./src/system/database/entities/*"],
      "migrations": ["./src/system/database/migrations/*"]
    },
    "incremental": true
  }
}
